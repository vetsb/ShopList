<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AutoHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Dialog" parent="AutoHeight">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditText" parent="AutoHeight">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="SearchEditText" parent="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="Spinner" parent="AutoHeight">
    </style>

    <style name="EditTextLabel" parent="AutoHeight">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn</item>
    </style>

    <style name="BottomDialog" parent="AutoHeight">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="BottomDialogLink" parent="AutoHeight">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#5F5F5F</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomDialogTitle" parent="AutoHeight">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@string/font_medium</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
</resources>
