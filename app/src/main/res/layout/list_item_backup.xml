<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.dd.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sl_shadowRadius="20dp"
        app:sl_shadowColor="#20000000"
        app:sl_dx="0dp"
        app:sl_dy="5dp"
        app:sl_cornerRadius="12dp">
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="360dp"
            android:background="@drawable/list_background"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/container">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/AutoHeight"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:text="На день рождения"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvItems"
                style="@style/AutoHeight"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="#606060"
                android:lineSpacingExtra="7dp"
                tools:text="Торт\nСвечи\nКонфеты\nСвечи\nКонфеты\nСвечи\nКонфеты\nСвечи\nКонфеты\nСвечи\n+ еще 5" />

            <TextView
                android:id="@+id/tvUpdatedAt"
                style="@style/AutoHeight"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textColor="#A4A4A4"
                tools:text="изменен сегодня 23:40"
                tools:ignore="SmallSp"
                android:layout_marginTop="11dp"/>
        </LinearLayout>
    </com.dd.ShadowLayout>
</LinearLayout>